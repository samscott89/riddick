{
  "name": "riddick",
  "version": "1.0.0",
  "description": "",
  "private": true,
  "type": "module",
	"sideEffects": false,
  "scripts": {
    "dev": "pnpm -r dev",
    "test": "vitest run",
    "build": "pnpm -r build",
    "deploy": "pnpm -r deploy",
    "lint": "eslint apps packages test --ext .ts",
    "lint:fix": "eslint apps packages test --ext .ts --fix",
    "format": "prettier --check \"{apps,packages,test}/**/*.{ts,json}\"",
    "format:fix": "prettier --write \"{apps,packages,test}/**/*.{ts,json}\"",
    "check": "pnpm run build && pnpm run lint && pnpm run format && pnpm test",
    "check:fix": "pnpm run format:fix && pnpm run lint:fix && pnpm run check",
    "migrate:local": "node scripts/migrate.js",
    "migrate:remote": "node scripts/migrate.js --production",
    "db:create": "wrangler d1 create riddick-db"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samscott89/riddick.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/samscott89/riddick/issues"
  },
  "homepage": "https://github.com/samscott89/riddick#readme",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "vitest related --run"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.53",
    "@eslint/js": "^9.30.1",
    "@riddick/config": "workspace:*",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "lint-staged": "^16.1.2",
    "miniflare": "^3.20250408.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "wrangler": "^4.24.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "hono": "^4.8.4",
    "web-tree-sitter": "^0.25.6",
    "zod": "^4.0.5"
  }
}