{
  "name": "riddick",
  "version": "1.0.0",
  "description": "",
  "main": "index.js",
  "scripts": {
    "dev": "wrangler dev",
    "test": "vitest run",
    "build": "tsc --noEmit false",
    "deploy": "wrangler deploy",
    "lint": "eslint src test --ext .ts",
    "lint:fix": "eslint src test --ext .ts --fix",
    "format": "prettier --check \"{src,test}/**/*.{ts,json}\"",
    "format:fix": "prettier --write \"{src,test}/**/*.{ts,json}\"",
    "check": "npm run build && npm run lint && npm run format && npm test",
    "check:fix": "npm run format:fix && npm run lint:fix && npm run check",
    "build:wasm": "cd rust-parser && wasm-pack build --target web --out-dir ../src/wasm",
    "generate:types": "cd rust-parser && cargo test export_bindings && mkdir -p ../src/parser/generated && cp bindings/*.ts ../src/parser/generated/ && cd .. && prettier --write \"src/parser/generated/*.ts\"",
    "build:all": "npm run generate:types && npm run build:wasm",
    "migrate:local": "node scripts/migrate.js",
    "migrate:remote": "node scripts/migrate.js --production",
    "db:create": "wrangler d1 create riddick-db"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/samscott89/riddick.git"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "bugs": {
    "url": "https://github.com/samscott89/riddick/issues"
  },
  "homepage": "https://github.com/samscott89/riddick#readme",
  "lint-staged": {
    "*.ts": [
      "prettier --write",
      "eslint --fix",
      "vitest related --run"
    ],
    "*.json": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@cloudflare/vitest-pool-workers": "^0.8.53",
    "@eslint/js": "^9.30.1",
    "@typescript-eslint/eslint-plugin": "^8.36.0",
    "@typescript-eslint/parser": "^8.36.0",
    "eslint": "^9.30.1",
    "eslint-config-prettier": "^10.1.5",
    "eslint-import-resolver-typescript": "^4.4.4",
    "eslint-plugin-import": "^2.32.0",
    "lint-staged": "^16.1.2",
    "miniflare": "^3.20250408.2",
    "prettier": "^3.6.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.36.0",
    "vite-plugin-wasm": "^3.5.0",
    "vitest": "~3.2.0",
    "wrangler": "^4.24.0"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.0",
    "hono": "^4.8.4",
    "web-tree-sitter": "^0.25.6",
    "zod": "^4.0.5"
  }
}